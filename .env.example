# BSN Knowledge Environment Configuration

# API Configuration
API_HOST=localhost
API_PORT=8000
API_DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/bsn_knowledge
SQLITE_DB_PATH=data/bsn.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# RAGnostic Integration
RAGNOSTIC_API_URL=http://localhost:8001
