# BSN Knowledge Environment Configuration

# API Configuration
API_HOST=localhost
API_PORT=8000
API_DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/bsn_knowledge
SQLITE_DB_PATH=data/bsn.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# RAGnostic Integration
RAGNOSTIC_API_URL=http://localhost:8001
RAGNOSTIC_API_KEY=your_ragnostic_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Content Generation Settings
MEDICAL_ACCURACY_THRESHOLD=0.95
MAX_VALIDATION_ATTEMPTS=3
CONTENT_GENERATION_TIMEOUT=120

# External Services
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key_here

# Medical Validation
MEDICAL_VALIDATION_STRICT=true
NCLEX_STANDARDS_PATH=data/nclex_standards.json
